{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES6",
    "jsx": "react-jsx",
    "checkJs": true,
    "moduleResolution": "nodenext",
    "baseUrl": "./",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@src/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "~/node_modules/*"]
}
